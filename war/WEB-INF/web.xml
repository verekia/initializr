<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

  <servlet>
    <servlet-name>builderServlet</servlet-name>
    <servlet-class>com.jverrecchia.initializr.builder.BuilderServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>webServlet</servlet-name>
    <servlet-class>com.jverrecchia.initializr.web.WebServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>builderServlet</servlet-name>
    <url-pattern>/builder</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>webServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

</web-app>